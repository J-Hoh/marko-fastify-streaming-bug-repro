$ var personPromise = new Promise((resolve, reject) => {
    setTimeout(function() {
        resolve();
    }, 3000);
});

style {
	#result {
		flex: 1 1 auto;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: stretch;
		align-content: center;
		padding: 1em;
		font-size: 4rem;
	}
	#result.loading {
		background-color: blue;
		color: white;
	}
	#result.resolved {
		background-color: green;
		color: white;
	}
	#result.errored {
		background-color: red;
	}
}

